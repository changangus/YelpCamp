<%- include("../partials/header") %> 

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to Yelp Camp</h1>
      <p class='header'>Its just Yelp, but for camping.</p>
      <p class="header">
        <a class="btn-primary btn-lg" href="campgrounds/new">Add a Campground!</a>
      </p>
    </div>
  </header>

  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <div class="col-lg-12">
      <h3>Campgrounds:</h3>
    </div>
    
    <% campgrounds.forEach(function(campground){ %>
      <div class="col-md-3 col-sm-6" id="campground-card">
        <div class="thumbnail">
          <img src="<%= campground.image %>" alt="">
          <div class="caption">
            <%= campground.name %>
          </div>   
          <p>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
          </p>
        </div>     
      </div>
    <% }) %> 
  </div>

</div>

<%- include("../partials/footer") %> 
<div class="container">
  <div class="row">
    <h1>Edit Comment..</h1>
    <div class="form">
      <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" id="" value="<%= comment.text %> ">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary" type="submit">submit</button>
        </div>
      </form>
      <a href="/campgrounds">Back to Campgrounds!</a>
    </div>
  </div>
</div>



